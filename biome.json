{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "vcs": {
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["package.json", "build"]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none",
      "arrowParentheses": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "complexity": {
        "noForEach": "off",
        "useArrowFunction": "off"
      },
      "style": {
        "noParameterAssign": "off"
      }
    }
  },
  "overrides": [
    {
      "include": ["benchmark"],
      "javascript": {
        "globals": ["before", "set", "suite", "bench"]
      }
    }
  ]
}
